<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center_horizontal"
	android:orientation="vertical" >

	<LinearLayout
		android:id="@+id/myDate"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"

		android:clickable="true"
		android:orientation="horizontal"
		android:paddingBottom="5dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:paddingTop="15dp">

		<LinearLayout
			android:id="@+id/dateLeftL"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="0.3"
			android:clickable="true"
			android:gravity="right"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/dateLeft"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:text="@string/left"
				android:textColor="@android:color/white"
				android:textSize="30sp"
				android:textStyle="bold" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_weight="0.4"
			android:clickable="true"
			android:gravity="center_horizontal"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/enterDate"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:text="Date"
				android:textAlignment="center"
				android:gravity="center_horizontal"
				android:textColor="@android:color/white"
				android:textSize="28sp" />

		</LinearLayout>

		<LinearLayout
			android:id="@+id/dateRightL"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_gravity="center_horizontal"
			android:layout_weight="0.3"
			android:clickable="true"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/dateRight"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:text="@string/right"
				android:textColor="@android:color/white"
				android:textSize="30sp"
				android:textStyle="bold" />

			<ImageView
				android:id="@+id/delete"
				android:layout_width="36dp"
				android:layout_height="36dp"
				android:src="@drawable/ic_menu_delete"
				android:layout_gravity="center"
				android:visibility="gone"></ImageView>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/myWeight"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"

		android:clickable="true"
		android:orientation="horizontal"
		android:paddingBottom="20dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:paddingTop="5dp">

		<LinearLayout
			android:id="@+id/weightLeftL"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="0.3"
			android:clickable="true"
			android:gravity="right"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/weightLeft"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:text="@string/left"
				android:textColor="@android:color/white"
				android:textSize="30sp"
				android:textStyle="bold" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_weight="0.4"
			android:clickable="true"
			android:gravity="center_horizontal"
			android:orientation="horizontal">

			<EditText
				android:id="@+id/enterWeight"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:text="74.0"
				android:textAlignment="center"
				android:gravity="center_horizontal"
				android:textColor="@android:color/white"
				android:textSize="60sp"
				android:cursorVisible="false"
				android:inputType="numberDecimal"
				android:textStyle="bold" />

		</LinearLayout>

		<LinearLayout
			android:id="@+id/weightRightL"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_gravity="center_horizontal"
			android:layout_weight="0.3"
			android:clickable="true"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/weightRight"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:text="@string/right"
				android:textColor="@android:color/white"
				android:textSize="30sp"
				android:textStyle="bold" />

		</LinearLayout>

	</LinearLayout>



		
		<View
    android:layout_width="fill_parent"
    android:layout_height="1dip"
    android:background="?android:attr/dividerHorizontal" />
		
<LinearLayout 
    style="?android:attr/buttonBarStyle"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="0dip"
    android:paddingLeft="2dip"
    android:paddingRight="2dip"
    android:measureWithLargestChild="true">
			

		
    <Button 
        android:id="@+id/yesButton"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
		android:textColor="@android:color/holo_blue_dark"
        android:text="@android:string/ok"/>

    <Button 
        android:id="@+id/noButton"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
		android:textColor="@android:color/holo_blue_dark"
        android:text="@android:string/cancel"/>

</LinearLayout>

</LinearLayout>


